# OllamaBot Environment Variables Template
# Copy this to .env and fill in your values
# .env is gitignored and will never be committed

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434

# External LLM API Keys (optional)
# Uncomment and fill in if using external providers
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=...

# Web Search (optional)
# DUCKDUCKGO_API_KEY=...

# Development
DEBUG_MODE=false
LOG_LEVEL=info
